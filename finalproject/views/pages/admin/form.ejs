<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Product Form</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <style>
    :root {
      --primary: #7209b7;
      --secondary: #3f37c9;
      --accent: #4cc9f0;
    }

    body {
      background: #f0f2f5;
      min-height: 100vh;
      display: flex;
      align-items: center;
      font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
    }

    .form-container {
      width: 100%;
      max-width: 1200px;
      margin: 2rem auto;
      background: white;
      border-radius: 20px;
      overflow: hidden;
      display: grid;
      grid-template-columns: 300px 1fr;
      box-shadow: 0 0 40px rgba(0,0,0,0.1);
    }

    .sidebar {
      background: linear-gradient(135deg, var(--primary), var(--secondary));
      padding: 2rem;
      color: white;
      position: relative;
      overflow: hidden;
    }

    .sidebar::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11 18c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm48 25c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm-43-7c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm63 31c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM34 90c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm56-76c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM12 86c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm28-65c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm23-11c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-6 60c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm29 22c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zM32 63c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm57-13c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-9-21c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM60 91c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM35 41c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM12 60c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2z' fill='%23ffffff' fill-opacity='0.1' fill-rule='evenodd'/%3E%3C/svg%3E");
      opacity: 0.2;
    }

    .sidebar-content {
      position: relative;
      z-index: 1;
    }

    .main-form {
      padding: 3rem;
    }

    .page-title {
      font-size: 2.5rem;
      font-weight: 700;
      margin-bottom: 3rem;
      color: white;
    }

    .form-floating {
      margin-bottom: 1.5rem;
    }

    .form-floating > .form-control {
      padding: 1.5rem 1rem;
      height: calc(3.5rem + 2px);
      border: 2px solid #e9ecef;
      border-radius: 12px;
    }

    .form-floating > .form-control:focus {
      border-color: var(--accent);
      box-shadow: 0 0 0 0.25rem rgba(76, 201, 240, 0.25);
    }

    .form-floating > label {
      padding: 1rem;
    }

    .featured-options {
      background: #f8f9fa;
      padding: 1.5rem;
      border-radius: 12px;
      margin-bottom: 1.5rem;
    }

    .featured-title {
      font-weight: 600;
      margin-bottom: 1rem;
      color: var(--primary);
    }

    .btn-group {
      width: 100%;
      gap: 1rem;
    }

    .btn {
      padding: 1rem 2rem;
      font-weight: 600;
      border-radius: 12px;
      transition: all 0.3s ease;
    }

    .btn-primary {
      background: linear-gradient(45deg, var(--primary), var(--secondary));
      border: none;
      flex: 2;
    }

    .btn-secondary {
      background: #e9ecef;
      border: none;
      color: #495057;
      flex: 1;
    }

    .btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .step-indicator {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
      margin-top: 3rem;
    }

    .step {
      display: flex;
      align-items: center;
      gap: 1rem;
      color: rgba(255,255,255,0.7);
    }

    .step.active {
      color: white;
    }

    .step-number {
      width: 30px;
      height: 30px;
      border-radius: 50%;
      background: rgba(255,255,255,0.1);
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 600;
    }

    .step.active .step-number {
      background: var(--accent);
    }

    @media (max-width: 768px) {
      .form-container {
        grid-template-columns: 1fr;
      }
      
      .sidebar {
        padding: 1.5rem;
      }
      
      .main-form {
        padding: 1.5rem;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="form-container">
      <div class="sidebar">
        <div class="sidebar-content">
          <h2 class="page-title">Add New Product</h2>
          
        </div>
      </div>

      <div class="main-form">
        <form  method="POST" enctype="multipart/form-data">
          <div class="form-floating">
            <input type="number" name="ID" class="form-control" id="productID" placeholder="Product ID" required>
            <label for="productID">Product ID</label>
          </div>

          <div class="form-floating">
            <textarea class="form-control"  name="Description" id="productDescription" placeholder="Product Description" style="height: 100px" required></textarea>
            <label for="productDescription">Product Description</label>
          </div>

          <div class="form-floating">
            <input type="number" name="Price" class="form-control" id="productPrice" placeholder="Price" required>
            <label for="productPrice">Price ($)</label>
          </div>
          <label for="quantity">Quantity:</label>
    <input type="number" name="quantity" min="1" value="1" required> <!-- Add quantity input -->

          <div class="featured-options">
            <div class="featured-title">Featured Status</div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="Featured" id="featuredYes" value="true" required>
              <label class="form-check-label" for="featuredYes">
                Featured Product
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="Featured" id="featuredNo" value="false" required>
              <label class="form-check-label" for="featuredNo">
                Standard Product
              </label>
            </div>
          </div>
          <label for="category">Category:</label>
            <select name="category">
              <% categories.forEach(category => { %>
               <option value="<%= category._id %>"><%= category.category %></option>
               <% }) %>
            </select>
          <div class="form-group">
            <label for="">Picture </label>
            <input name="file" type="file" class="form-control" value="5000"/>
        </div>

          <div class="btn-group d-flex">
            <button type="submit" class="btn btn-primary">
              <i class="fas fa-arrow-right ms-2"></i>
              submit
            </button>
           
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
